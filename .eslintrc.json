{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"plugin:react/recommended",
		"standard",
		"plugin:react/jsx-runtime", // para no hacer import React from 'react';
		"plugin:react-hooks/recommended", //para react-hook
		"plugin:jest-dom/recommended", // reglas para los test
		"prettier"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "jest-dom"],
	"rules": {
		"no-console": "error",
		"max-len": "off"
	},

	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
