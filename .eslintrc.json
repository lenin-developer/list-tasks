{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "plugin:react/jsx-runtime", // para no hacer import React from 'react';
		"plugin:react-hooks/recommended" //para react-hook
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "error" 
    },

    "settings": {
        "react": {
          "version": "detect"
        }
      }
}
